<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/img_publiccourser_title"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/dailyrec01" />

    <TextView
        android:id="@+id/tv_publiccourser_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_publiccourser_title"
        android:layout_below="@+id/tv_publiccourser_author"
        android:text="Medium Text"
        android:textColor="@color/red"
		android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_publiccourser_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_publiccourser_title"
        android:layout_below="@+id/tv_publiccourser_title"
        android:text="Medium Text"
        android:textColor="@color/gray"
		android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_publiccourser_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_publiccourser_title"
        android:layout_toRightOf="@+id/img_publiccourser_title"
        android:layout_marginLeft="5dp"
		android:textSize="18sp"
        android:text="Large Text"
		/>

</RelativeLayout>